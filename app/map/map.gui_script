    end
end
function on_drag(action)
    if math.abs(action.dy) == 0 then
        return
    end
    local map = gui.get_node("map")
    local pos = gui.get_position(map)
    pos.y = math.max(
        -2800,
        math.min(0, pos.y + action.dy)
    )
    gui.set_position(map, pos)
    GameStorage.set("map_last_pos_y", pos.y)
end
