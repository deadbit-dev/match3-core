    gui.set_position(map, pos)
end
function set_completed_levels()
    for ____, level in ipairs(GameStorage.get("completed_levels")) do
        local level_node = gui.get_node(tostring(level + 1) .. "/level")
        gui.set_texture(level_node, "map")
